<h1>Edit Song</h1>
<form method="POST" action="/songs/<%= @song.slug %>">

  <label>Enter song name: </label><input name="Name" id="Name" type="text" value="<%= @song.name %>" /><br />
  <label>Select genre(s):</label><br />
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <% if @song.genres.include?genre %>checked<% end %>><label><%= genre.name %></label><br />
  <% end %>
  <label>Enter artist's name: </label><input name='Artist Name' id='Artist Name' type="text" value="<%= @song.artist.name %>" /><br />
  <input id="hidden" type="hidden" name="_method" value="patch" />
  <input type="submit" id="Save" value="Save">


</form>
